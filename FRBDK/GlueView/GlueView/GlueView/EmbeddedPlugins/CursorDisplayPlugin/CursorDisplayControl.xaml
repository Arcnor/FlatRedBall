<UserControl x:Class="GlueView.EmbeddedPlugins.CursorDisplayPlugin.CursorDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GlueView.EmbeddedPlugins.CursorDisplayPlugin"
             mc:Ignorable="d" 
             BorderBrush="Transparent"
             d:DesignHeight="40" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock>Z for coordinates:</TextBlock>
            <TextBox Width="28" Text="{Binding ZValue}"></TextBox>
        </StackPanel>
        <TextBlock Text="{Binding CursorText}"></TextBlock>
    </StackPanel>
</UserControl>
