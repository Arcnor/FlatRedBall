<Window x:Class="OfficialPlugins.SpritePlugin.Views.TextureCoordinateSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfficialPlugins.SpritePlugin.Views"
        mc:Ignorable="d"
        Title="TextureCoordinateSelectionWindow" 
            Height="{Binding WindowHeight, Mode=TwoWay}" 
            Width="{Binding WindowWidth, Mode=TwoWay}"

            
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <local:TextureCoordinateSelectionView x:Name="InnerView"></local:TextureCoordinateSelectionView>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="50" Click="OkButtonClick">OK</Button>
            <Button Width="50" Click="CancelButtonClick"  Margin="5,0,0,0">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
