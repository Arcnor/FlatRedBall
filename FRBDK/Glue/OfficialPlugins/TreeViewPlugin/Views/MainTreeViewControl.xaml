<UserControl x:Class="OfficialPlugins.TreeViewPlugin.Views.MainTreeViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfficialPlugins.TreeViewPlugin.Views" xmlns:pt="http://propertytools.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBox 
                    Text="{Binding SearchBoxText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    KeyDown="TextBox_KeyDown"
                    ></TextBox>
                <TextBlock TextWrapping="Wrap" FontSize="10" Visibility="{Binding TipsVisibility}">Begin a search with "f ", "e ", "s ", "o ", or "v " (letter then space) to filter results.</TextBlock>
            </StackPanel>
            <Button x:Name="ClearSearchButton" Width="18" Height="20" VerticalAlignment="Top" Grid.Column="1" Click="ClearSearchButton_Click"
                    Visibility="{Binding SearchButtonVisibility}"
                    >X</Button>
        </Grid>

        <pt:TreeListBox x:Name="MainTreeView" 
                        Grid.Row="1" 
                        SelectionMode="Single" 
                        AllowDrop="True"
                        HierarchySource="{Binding VisibleRoot}"
                        ChildrenPath="VisibleChildren"
                        KeyDown="MainTreeView_KeyDown"
                        PreviewMouseLeftButtonDown="MainTreeView_PreviewMouseLeftButtonDown"
                        PreviewMouseMove="MainTreeView_PreviewMouseMove"
                        Drop="MainTreeView_Drop"
                        DragEnter="MainTreeView_DragEnter"
                        MouseMove="MainTreeView_MouseMove">
            <pt:TreeListBox.ContextMenu>
                <ContextMenu x:Name="RightClickContextMenu">
                    <MenuItem Header="Hello"></MenuItem>
                    <MenuItem Header="Hello2"></MenuItem>
                    <MenuItem Header="Hello3"></MenuItem>
                    <MenuItem Header="Hello4"></MenuItem>
                </ContextMenu>
            </pt:TreeListBox.ContextMenu>
            <pt:TreeListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Visibility="{Binding Visibility}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="{Binding ImageSource}" Width="18" Margin="0 0 4 0"/>
                        <pt:EditableTextBlock Grid.Column="1" Text="{Binding Text}" 
                                              FontWeight="{Binding FontWeight}" 
                                              IsEditing="{Binding IsEditing}"/>
                    </Grid>
                </DataTemplate>
            </pt:TreeListBox.ItemTemplate>
        </pt:TreeListBox>
    </Grid>
</UserControl>
