<UserControl x:Class="OfficialPluginsCore.QuickActionPlugin.Views.QuickActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfficialPluginsCore.QuickActionPlugin.Views"
             mc:Ignorable="d" 
             d:DesignHeight="175" Width="150"  Margin="10,10,0,0">
    <Grid>
        <Button Click="Button_Click">
            
        </Button>
        <StackPanel>
            <TextBlock x:Name="TitleTextBlock" IsHitTestVisible="False" HorizontalAlignment="Center" TextAlignment="Center" FontSize="24" Margin="0,12,0,0" TextWrapping="Wrap">
                This is the title
            </TextBlock>
            <TextBlock x:Name="DetailsTextBlock" IsHitTestVisible="False" Margin="10,10,5,10" TextWrapping="Wrap">
                This is the second text block, which has detail about the action
            </TextBlock>
            
        </StackPanel>
    </Grid>
</UserControl>
