<UserControl x:Class="OfficialPlugins.GameHost.Views.GameHostView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OfficialPlugins.GameHost.Views"
             xmlns:views="clr-namespace:OfficialPlugins.Compiler.Views"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!--put this before the while running view so it doesn't block the view on narrow screens-->
        <StackPanel x:Name="AlwaysVisibleStack" HorizontalAlignment="Right" Orientation="Horizontal">
            <Grid Visibility="{Binding MessageAboutEditModeDisabledVisibility}">
                <Frame Background="Yellow" BorderBrush="DarkGray" BorderThickness="1"/>
                <TextBlock Margin="3" VerticalAlignment="Center">Enable GlueView Edit in Settings for live edit</TextBlock>
            </Grid>
            <Button VerticalAlignment="Top" Width="24" Height="24" Click="GlueViewSettingsButtonClicked">
                <Image IsHitTestVisible="False" Source="/OfficialPluginsCore;component/Compiler/Icons/Settings.png"></Image>
            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <views:WhileRunningView  Height="Auto"
                    Visibility="{Binding WhileRunningViewVisibility}"
                    StopClicked="WhileRunningView_StopClicked"
                    RestartGameClicked="WhileRunningView_RestartGameClicked"
                    RestartGameCurrentScreenClicked ="WhileRunningView_RestartGameCurrentScreenClicked"
                    RestartScreenClicked="WhileRunningView_RestartScreenClicked"
                    AdvanceOneFrameClicked="WhileRunningView_AdvanceOneFrameClicked"
                    PauseClicked="WhileRunningView_PauseClicked"
                    UnpauseClicked="WhileRunningView_UnpauseClicked"
                    >
            
            </views:WhileRunningView>
            <StackPanel Orientation="Horizontal" Margin="6,0,0,0"
                        Visibility="{Binding WhileRunningViewVisibility}">
                <Button Height="24" Click="FocusButtonClicked" Visibility="{Binding FocusButtonVisibility}">
                    <Image  IsHitTestVisible="False" Source="/OfficialPluginsCore;component/Compiler/Icons/FocusOnSelection.png"></Image>
                </Button>
            </StackPanel>

        </StackPanel>
        <Grid x:Name="MainGrid" Grid.Row="1">
            <WindowsFormsHost x:Name="WinformsHost" SizeChanged="WinformsHost_SizeChanged">
                
            </WindowsFormsHost>
        </Grid>
        
    </Grid>
</UserControl>
