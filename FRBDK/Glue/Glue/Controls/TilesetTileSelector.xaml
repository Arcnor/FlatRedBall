<UserControl x:Class="FlatRedBall.Glue.Controls.TilesetTileSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlatRedBall.Glue.Controls"
             mc:Ignorable="d" >
    <StackPanel PreviewMouseDown="StackPanel_PreviewMouseDown">
        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Margin="3" x:Name="Image" Width="32" Height="32"></Image>
        <Label x:Name="Label" HorizontalAlignment="Center"></Label>
    </StackPanel>
</UserControl>
